<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="adamwoollen.gmail.com.water_reporter.ReportProblemMain">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_below="@+id/FaultMainPageTitle"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:useDefaultMargins="true">

        <ImageButton
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:id="@+id/WaterLeak"
            android:layout_column="0"
            android:layout_row="0"
            android:layout_gravity="center"
            android:clickable="true"
            android:src="@drawable/waterleak"
            android:scaleType="fitCenter"
            android:cropToPadding="false"
            android:focusable="false"
            android:contentDescription="Water Leak" />

        <ImageButton
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:id="@+id/GeneralSupply"
            android:layout_row="0"
            android:layout_column="5"
            android:layout_below="@+id/FaultMainPageTitle"
            android:layout_alignRight="@+id/FaultMainPageTitle"
            android:layout_alignEnd="@+id/FaultMainPageTitle"
            android:layout_gravity="center"
            android:src="@drawable/generalsupply"
            android:scaleType="fitCenter"
            android:clickable="true"
            android:contentDescription="General Supply" />

        <ImageButton
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:id="@+id/DrainIssue"
            android:layout_row="13"
            android:layout_column="0"
            android:layout_gravity="center|top"
            android:src="@drawable/drainissue"
            android:scaleType="fitCenter"
            android:clickable="true"
            android:contentDescription="Drain Issue" />

        <ImageButton
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:id="@+id/Other"
            android:layout_row="13"
            android:layout_column="5"
            android:layout_gravity="center|top"
            android:src="@drawable/other"
            android:scaleType="fitCenter"
            android:clickable="true"
            android:baselineAlignBottom="false"
            android:contentDescription="Other" />

    </GridLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Report a Fault"
        android:id="@+id/FaultMainPageTitle"
        android:textSize="50dp"
        android:typeface="sans"
        android:clickable="false"
        style="@style/Base.DialogWindowTitle.AppCompat"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true" />

</RelativeLayout>
